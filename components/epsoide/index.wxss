/* components/epsoide/epsoide.wxss */
.container {
  height: 60rpx;
  display: inline-flex;
  flex-direction: row;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}
.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.line {
  height: 44rpx;
  border-left: 1rpx solid #bbbbbb;
  margin-right: 14rpx;
  margin-bottom: 2rpx;
}

.date-container {
  display: flex;
  flex-direction: column;
  height: 60rpx;
  margin-top: 5rpx;
}

.month {
  font-size: 30rpx;
  line-height: 30rpx;
}

.year {
  font-size: 25rpx;
}